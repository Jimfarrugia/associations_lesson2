<h1>Books Index</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Author</th>
  </tr>

  <% @books.each do |book| %>
  <tr>
    <td>
      <%= link_to(book.title, controller: "books", action: "edit", id: book.id) %>
    </td>
    <td>
      by <%= book.author.name %>
    </td>
  </tr>
  <% end %>
</table>
