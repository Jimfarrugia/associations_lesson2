<h1>Edit Book Details</h1>

<%= form_tag(book_path, method: "put") do %>
  <p>
    <%= label_tag(:title, "Book Title") %>
    &nbsp;
    <%= text_field_tag(:title, @book.title) %>
  </p>
  <p>
    <%= label_tag(:author, "Author Name") %>
    &nbsp;
    <%= text_field_tag(:author, @book.author.name) %>
  </p>
  <ul>
    <% @genres.each do |genre| %>
      <li>
        <!-- Add checkbox for genre -->
        <%= genre.name %>
      </li>
    <% end %>
  </ul>
  <p>
    <%= submit_tag("Update Book") %>
  </p>
<% end %>